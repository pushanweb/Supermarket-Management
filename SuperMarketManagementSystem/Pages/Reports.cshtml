@page
@model SuperMarketManagementSystem.Pages.ReportsModel
@{
    ViewData["Title"] = "Index";
}

<div style="text-align:center; margin-top: 40px; margin-bottom: 40px">
    <h1>Monthly Report on sales</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].CreatorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].QuantitySold)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].InvoiceAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Status)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantitySold)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.InvoiceId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InvoiceId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InvoiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
